@model IEnumerable<Blog.Models.Post>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<td> <a href="@Url.Action("adicionaPost","Home")">Adiciona_Post</a> </td>

<table class="table table-responsive table-bordered table-striped">
    <thead>
        <tr>
            <th> Id</th>
            <th> Titulo</th>
            <th> Resumo</th>
            <th> Categoria</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Titulo</td>
                <td>@item.Resumo</td>
                <td>@item.Categoria</td>
                <td> <a href="@Url.Action("adicionaPost","Home",new { id = item.Id })">Update</a> </td>  
                <td> <a href="@Url.Action("RemovePost","Home",new { id = item.Id })">Remove</a> </td>   
            </tr>
        }

    </tbody>
</table>


